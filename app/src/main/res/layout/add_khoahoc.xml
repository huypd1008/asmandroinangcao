<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#F8E0E6"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTenKhoahocadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Khóa Học"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/edtSoBuoiHocadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số buổi học"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/edtTenGiangVienadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Giảng viên"
            android:textColorHint="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNgaybatdauadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày bắt đầu"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/dateBatdauadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:src="@drawable/ic_date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNgayKetthucadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày kết thúc"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/dateKetthucadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:src="@drawable/ic_date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNgaythiadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày thi"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/dateThiadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:src="@drawable/ic_date" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>